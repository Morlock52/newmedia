# Omega Media Server Configuration
# Copy this file to .env and customize for your setup

# System Configuration
PUID=1000
PGID=1000
TZ=America/New_York

# Paths
CONFIG_PATH=./config
MEDIA_PATH=./media
DOWNLOADS_PATH=./downloads
TRANSCODE_PATH=./transcode

# Optional separate media paths
MOVIES_PATH=./media/movies
TV_PATH=./media/tv
MUSIC_PATH=./media/music
PHOTOS_PATH=./media/photos
BOOKS_PATH=./media/books

# Network Configuration
DOMAIN=localhost
ADMIN_EMAIL=admin@example.com

# Feature Flags
ENABLE_AI=true
ENABLE_8K=true
ENABLE_VPN=false
ENABLE_PLEX=false

# Database Configuration
POSTGRES_PASSWORD=omega_secure_password_change_me
REDIS_PASSWORD=omega_redis_password_change_me

# AI Configuration
AI_MODEL=advanced
RECOMMENDATION_ENGINE=collaborative
SUBTITLE_LANGUAGES=en,es,fr,de,ja,ko,zh

# Performance Settings
TRANSCODE_THREADS=0  # 0 = auto-detect
AI_WORKERS=4
CACHE_SIZE=10G

# VPN Configuration (if enabled)
VPN_ENDPOINT=
VPN_PUBLIC_KEY=
VPN_PRIVATE_KEY=
VPN_ALLOWED_IPS=0.0.0.0/0

# External Services (optional)
TMDB_API_KEY=
OPENSUBTITLES_API_KEY=
MUSICBRAINZ_API_KEY=

# Hardware Acceleration
# Uncomment and adjust based on your hardware
# NVIDIA_VISIBLE_DEVICES=all
# NVIDIA_DRIVER_CAPABILITIES=compute,video,utility
# LIBVA_DRIVER_NAME=iHD
# INTEL_GPU_DEVICE=/dev/dri/renderD128

# Advanced Settings
MAX_UPLOAD_SIZE=100G
SESSION_TIMEOUT=86400
LOG_LEVEL=info
ENABLE_METRICS=true
ENABLE_TELEMETRY=false