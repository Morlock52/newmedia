{
  "dashboard": {
    "id": null,
    "title": "üë• User Activity & Content Analytics",
    "tags": ["users", "analytics", "activity", "content"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "1m",
    "schemaVersion": 39,
    "version": 1,
    "time": {
      "from": "now-24h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["30s", "1m", "5m", "15m", "30m", "1h", "2h", "6h", "12h", "1d"]
    },
    "templating": {
      "list": [
        {
          "name": "server",
          "type": "query",
          "datasource": "Prometheus",
          "query": "label_values(streaming_active_sessions, server)",
          "refresh": 1,
          "includeAll": true,
          "multi": true,
          "current": {
            "selected": false,
            "text": "All",
            "value": "$__all"
          }
        },
        {
          "name": "interval",
          "type": "interval",
          "query": "1m,5m,10m,30m,1h,6h,12h,1d,7d,14d,30d",
          "current": {
            "selected": false,
            "text": "5m",
            "value": "5m"
          }
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "name": "Media Events",
          "datasource": "Loki",
          "enable": true,
          "expr": "{stream=\"media_events\"} |= \"playback_start\"",
          "iconColor": "rgba(0, 211, 255, 1)",
          "textFormat": "{{event_type}} - {{service}}"
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "title": "üìä Live Activity Overview",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(streaming_active_sessions{server=~\"$server\"})",
            "legendFormat": "Active Sessions"
          },
          {
            "expr": "sum(streaming_transcoding_sessions{server=~\"$server\"})",
            "legendFormat": "Transcoding"
          },
          {
            "expr": "sum(user_sessions_total{server=~\"$server\"})",
            "legendFormat": "Total Users"
          },
          {
            "expr": "sum(streaming_bandwidth_mbps{server=~\"$server\"})",
            "legendFormat": "Bandwidth"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "decimals": 0
          },
          "overrides": [
            {
              "matcher": {
                "id": "byName",
                "options": "Active Sessions"
              },
              "properties": [
                {
                  "id": "displayName",
                  "value": "üé¨ Active Sessions"
                },
                {
                  "id": "color",
                  "value": {
                    "mode": "fixed",
                    "fixedColor": "green"
                  }
                }
              ]
            },
            {
              "matcher": {
                "id": "byName",
                "options": "Transcoding"
              },
              "properties": [
                {
                  "id": "displayName",
                  "value": "üîÑ Transcoding"
                },
                {
                  "id": "color",
                  "value": {
                    "mode": "fixed",
                    "fixedColor": "orange"
                  }
                }
              ]
            },
            {
              "matcher": {
                "id": "byName",
                "options": "Total Users"
              },
              "properties": [
                {
                  "id": "displayName",
                  "value": "üë• Users Online"
                },
                {
                  "id": "color",
                  "value": {
                    "mode": "fixed",
                    "fixedColor": "blue"
                  }
                }
              ]
            },
            {
              "matcher": {
                "id": "byName",
                "options": "Bandwidth"
              },
              "properties": [
                {
                  "id": "displayName",
                  "value": "üì° Bandwidth (Mbps)"
                },
                {
                  "id": "unit",
                  "value": "Mbits"
                },
                {
                  "id": "color",
                  "value": {
                    "mode": "fixed",
                    "fixedColor": "purple"
                  }
                }
              ]
            }
          ]
        },
        "gridPos": {"h": 4, "w": 24, "x": 0, "y": 0},
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "horizontal",
          "textMode": "value_and_name",
          "colorMode": "background"
        }
      },
      {
        "id": 2,
        "title": "üìà Streaming Activity Timeline",
        "type": "timeseries",
        "targets": [
          {
            "expr": "streaming_active_sessions{server=~\"$server\"}",
            "legendFormat": "{{server}} - Active Sessions"
          },
          {
            "expr": "streaming_transcoding_sessions{server=~\"$server\"}",
            "legendFormat": "{{server}} - Transcoding"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "lineWidth": 2,
              "fillOpacity": 15,
              "gradientMode": "opacity",
              "stacking": {
                "mode": "none",
                "group": "A"
              },
              "pointSize": 5,
              "showPoints": "auto"
            },
            "unit": "short",
            "min": 0
          }
        },
        "gridPos": {"h": 8, "w": 16, "x": 0, "y": 4},
        "options": {
          "tooltip": {
            "mode": "multi",
            "sort": "desc"
          },
          "legend": {
            "displayMode": "table",
            "placement": "bottom",
            "calcs": ["last", "max", "mean"]
          }
        }
      },
      {
        "id": 3,
        "title": "‚è∞ Peak Hours Heatmap",
        "type": "heatmap",
        "targets": [
          {
            "expr": "avg_over_time(streaming_active_sessions{server=~\"$server\"}[$interval]) by (server)",
            "legendFormat": "{{server}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "hideFrom": {
                "legend": false,
                "tooltip": false,
                "vis": false
              },
              "scaleDistribution": {
                "type": "linear"
              }
            },
            "color": {
              "mode": "spectrum"
            }
          }
        },
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 4},
        "options": {
          "calculate": false,
          "cellGap": 1,
          "cellValues": {
            "unit": "short"
          },
          "color": {
            "exponent": 0.5,
            "fill": "dark-orange",
            "mode": "spectrum",
            "reverse": false,
            "scale": "exponential",
            "scheme": "Oranges",
            "steps": 64
          },
          "exemplars": {
            "color": "rgba(255,0,255,0.7)"
          },
          "filterValues": {
            "le": 1e-9
          },
          "legend": {
            "show": false
          },
          "rowsFrame": {
            "layout": "auto"
          },
          "tooltip": {
            "show": true,
            "yHistogram": false
          },
          "yAxis": {
            "axisPlacement": "left",
            "reverse": false,
            "unit": "short"
          }
        }
      },
      {
        "id": 4,
        "title": "üì± Content Consumption by Type",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum by (type) (rate(content_watched_total[24h]))",
            "legendFormat": "{{type}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "short"
          }
        },
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 12},
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "pieType": "donut",
          "tooltip": {
            "mode": "single",
            "sort": "none"
          },
          "legend": {
            "displayMode": "table",
            "placement": "right",
            "values": ["value", "percent"]
          },
          "displayLabels": ["name", "percent"]
        }
      },
      {
        "id": 5,
        "title": "üìä Bandwidth Usage Distribution",
        "type": "bargauge",
        "targets": [
          {
            "expr": "streaming_bandwidth_mbps{server=~\"$server\"}",
            "legendFormat": "{{server}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "continuous-GrYlRd"
            },
            "custom": {
              "axisPlacement": "auto",
              "barAlignment": 0,
              "drawStyle": "line",
              "fillOpacity": 80,
              "gradientMode": "none",
              "hideFrom": {
                "legend": false,
                "tooltip": false,
                "vis": false
              },
              "lineInterpolation": "linear",
              "lineWidth": 1,
              "pointSize": 5,
              "scaleDistribution": {
                "type": "linear"
              },
              "showPoints": "auto",
              "spanNulls": false,
              "stacking": {
                "group": "A",
                "mode": "none"
              },
              "thresholdsStyle": {
                "mode": "off"
              }
            },
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "red",
                  "value": 80
                }
              ]
            },
            "unit": "Mbits"
          }
        },
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 12},
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "vertical",
          "textMode": "auto",
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto"
        }
      },
      {
        "id": 6,
        "title": "üéØ User Engagement Metrics",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(increase(user_activity_count{activity_type=\"login\"}[24h]))",
            "legendFormat": "Daily Logins"
          },
          {
            "expr": "sum(increase(content_watched_total[24h]))",
            "legendFormat": "Content Watched"
          },
          {
            "expr": "avg(streaming_active_sessions)",
            "legendFormat": "Avg Concurrent"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 10},
                {"color": "red", "value": 20}
              ]
            },
            "unit": "short"
          },
          "overrides": [
            {
              "matcher": {
                "id": "byName",
                "options": "Daily Logins"
              },
              "properties": [
                {
                  "id": "displayName",
                  "value": "üîë Daily Logins"
                }
              ]
            },
            {
              "matcher": {
                "id": "byName",
                "options": "Content Watched"
              },
              "properties": [
                {
                  "id": "displayName",
                  "value": "üëÄ Content Watched"
                }
              ]
            },
            {
              "matcher": {
                "id": "byName",
                "options": "Avg Concurrent"
              },
              "properties": [
                {
                  "id": "displayName",
                  "value": "üìä Avg Concurrent"
                }
              ]
            }
          ]
        },
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 12},
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "auto",
          "textMode": "value_and_name",
          "colorMode": "background"
        }
      },
      {
        "id": 7,
        "title": "üìö Content Library Growth",
        "type": "timeseries",
        "targets": [
          {
            "expr": "media_library_count",
            "legendFormat": "{{type}} Count"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "stepAfter",
              "lineWidth": 2,
              "fillOpacity": 0,
              "stacking": {
                "mode": "none",
                "group": "A"
              }
            },
            "unit": "short"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 20},
        "options": {
          "tooltip": {
            "mode": "multi",
            "sort": "desc"
          },
          "legend": {
            "displayMode": "table",
            "placement": "bottom",
            "calcs": ["last", "diff"]
          }
        }
      },
      {
        "id": 8,
        "title": "üîÑ Download Activity & Queue Status",
        "type": "timeseries",
        "targets": [
          {
            "expr": "download_active_count",
            "legendFormat": "{{client}} - Active Downloads"
          },
          {
            "expr": "download_queue_size",
            "legendFormat": "{{client}} - Queue Size"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "lineWidth": 2,
              "fillOpacity": 10,
              "stacking": {
                "mode": "none",
                "group": "A"
              }
            },
            "unit": "short"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 20},
        "options": {
          "tooltip": {
            "mode": "multi",
            "sort": "desc"
          },
          "legend": {
            "displayMode": "table",
            "placement": "bottom",
            "calcs": ["last", "max"]
          }
        }
      },
      {
        "id": 9,
        "title": "üìã Recent Activity Log",
        "type": "logs",
        "targets": [
          {
            "expr": "{stream=\"media_events\"} | json | line_format \"{{.timestamp}} [{{.service}}] {{.event_type}}: {{.message}}\"",
            "datasource": "Loki"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 28},
        "options": {
          "showTime": true,
          "showLabels": false,
          "showCommonLabels": false,
          "wrapLogMessage": false,
          "prettifyLogMessage": false,
          "enableLogDetails": true,
          "dedupStrategy": "none",
          "sortOrder": "Descending"
        }
      }
    ]
  }
}