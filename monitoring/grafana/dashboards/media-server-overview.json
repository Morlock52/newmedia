{
  "dashboard": {
    "id": null,
    "title": "Media Server Overview - Ultimate Dashboard",
    "tags": ["media", "overview", "streaming"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "30s",
    "schemaVersion": 39,
    "version": 1,
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
    },
    "templating": {
      "list": [
        {
          "name": "datasource",
          "type": "datasource",
          "query": "prometheus",
          "current": {
            "selected": false,
            "text": "Prometheus",
            "value": "prometheus"
          }
        },
        {
          "name": "instance",
          "type": "query",
          "datasource": "${datasource}",
          "query": "label_values(up, instance)",
          "refresh": 1,
          "includeAll": true,
          "multi": true,
          "current": {
            "selected": false,
            "text": "All",
            "value": "$__all"
          }
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "name": "Service Events",
          "datasource": "loki",
          "enable": true,
          "expr": "{stream=\"media_events\"}",
          "iconColor": "green",
          "textFormat": "{{event_type}} - {{service}}"
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "title": "üé¨ Media Server Status",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=~\".*jellyfin.*|.*plex.*|.*emby.*\"}",
            "legendFormat": "{{job}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            },
            "mappings": [
              {"type": "value", "value": "0", "text": "DOWN"},
              {"type": "value", "value": "1", "text": "UP"}
            ]
          }
        },
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "background"
        }
      },
      {
        "id": 2,
        "title": "üì° Active Streaming Sessions",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(streaming_active_sessions)",
            "legendFormat": "Active Sessions"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "short"
          }
        },
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0},
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "colorMode": "value",
          "graphMode": "area",
          "orientation": "auto"
        }
      },
      {
        "id": 3,
        "title": "üîÑ Transcoding Load",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(streaming_transcoding_sessions)",
            "legendFormat": "Transcoding"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 2},
                {"color": "red", "value": 5}
              ]
            },
            "unit": "short"
          }
        },
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "colorMode": "background"
        }
      },
      {
        "id": 4,
        "title": "üíæ Media Library Size",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(media_library_size_bytes)",
            "legendFormat": "Total Size"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "continuous-GrYlRd"
            },
            "unit": "bytes"
          }
        },
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "colorMode": "background"
        }
      },
      {
        "id": 5,
        "title": "üìä Streaming Activity (24h)",
        "type": "timeseries",
        "targets": [
          {
            "expr": "streaming_active_sessions",
            "legendFormat": "{{server}} - Active Sessions"
          },
          {
            "expr": "streaming_transcoding_sessions",
            "legendFormat": "{{server}} - Transcoding"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "barAlignment": 0,
              "lineWidth": 2,
              "fillOpacity": 10,
              "gradientMode": "none",
              "spanNulls": false,
              "insertNulls": false,
              "showPoints": "never",
              "pointSize": 5,
              "stacking": {
                "mode": "none",
                "group": "A"
              },
              "axisPlacement": "auto",
              "axisLabel": "",
              "scaleDistribution": {
                "type": "linear"
              },
              "hideFrom": {
                "legend": false,
                "tooltip": false,
                "vis": false
              },
              "thresholdsStyle": {
                "mode": "off"
              }
            },
            "unit": "short",
            "min": 0
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "options": {
          "tooltip": {
            "mode": "multi",
            "sort": "none"
          },
          "legend": {
            "displayMode": "list",
            "placement": "bottom",
            "calcs": ["last", "max"]
          }
        }
      },
      {
        "id": 6,
        "title": "üíø Media Library Stats",
        "type": "piechart",
        "targets": [
          {
            "expr": "media_library_count",
            "legendFormat": "{{type}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "short"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "pieType": "pie",
          "tooltip": {
            "mode": "single",
            "sort": "none"
          },
          "legend": {
            "displayMode": "list",
            "placement": "right",
            "values": ["value", "percent"]
          },
          "displayLabels": ["name", "value"]
        }
      },
      {
        "id": 7,
        "title": "‚¨áÔ∏è Download Activity",
        "type": "timeseries",
        "targets": [
          {
            "expr": "download_speed_bytes_per_second",
            "legendFormat": "{{client}} - Speed"
          },
          {
            "expr": "download_active_count",
            "legendFormat": "{{client}} - Active Downloads"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "lineWidth": 2,
              "fillOpacity": 20,
              "stacking": {
                "mode": "none",
                "group": "A"
              }
            },
            "unit": "binBps"
          },
          "overrides": [
            {
              "matcher": {
                "id": "byRegexp",
                "options": ".*Active Downloads.*"
              },
              "properties": [
                {
                  "id": "unit",
                  "value": "short"
                },
                {
                  "id": "custom.axisPlacement",
                  "value": "right"
                }
              ]
            }
          ]
        },
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 12},
        "options": {
          "tooltip": {
            "mode": "multi",
            "sort": "none"
          },
          "legend": {
            "displayMode": "list",
            "placement": "bottom",
            "calcs": ["last", "max", "mean"]
          }
        }
      },
      {
        "id": 8,
        "title": "üö® Service Health Overview",
        "type": "table",
        "targets": [
          {
            "expr": "up",
            "instant": true,
            "legendFormat": "{{instance}}"
          },
          {
            "expr": "service_response_time_seconds",
            "instant": true,
            "legendFormat": "{{service}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 0.5},
                {"color": "green", "value": 1}
              ]
            }
          },
          "overrides": [
            {
              "matcher": {
                "id": "byName",
                "options": "Value #A"
              },
              "properties": [
                {
                  "id": "displayName",
                  "value": "Status"
                },
                {
                  "id": "mappings",
                  "value": [
                    {"type": "value", "value": "0", "text": "‚ùå DOWN"},
                    {"type": "value", "value": "1", "text": "‚úÖ UP"}
                  ]
                }
              ]
            },
            {
              "matcher": {
                "id": "byName",
                "options": "Value #B"
              },
              "properties": [
                {
                  "id": "displayName",
                  "value": "Response Time"
                },
                {
                  "id": "unit",
                  "value": "s"
                }
              ]
            }
          ]
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 20},
        "options": {
          "showHeader": true
        },
        "transformations": [
          {
            "id": "merge",
            "options": {}
          }
        ]
      },
      {
        "id": 9,
        "title": "üìà System Resource Usage",
        "type": "timeseries",
        "targets": [
          {
            "expr": "100 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes * 100)",
            "legendFormat": "Memory Usage %"
          },
          {
            "expr": "100 - (avg(rate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
            "legendFormat": "CPU Usage %"
          },
          {
            "expr": "100 - (node_filesystem_avail_bytes{mountpoint=\"/\"} / node_filesystem_size_bytes{mountpoint=\"/\"} * 100)",
            "legendFormat": "Disk Usage %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "lineWidth": 2,
              "fillOpacity": 10,
              "stacking": {
                "mode": "none",
                "group": "A"
              }
            },
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 70},
                {"color": "red", "value": 90}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 20},
        "options": {
          "tooltip": {
            "mode": "multi",
            "sort": "none"
          },
          "legend": {
            "displayMode": "list",
            "placement": "bottom",
            "calcs": ["last", "max"]
          }
        }
      },
      {
        "id": 10,
        "title": "üåê Network Speed Test",
        "type": "stat",
        "targets": [
          {
            "expr": "speedtest_download_bits_per_second / 1000000",
            "legendFormat": "Download"
          },
          {
            "expr": "speedtest_upload_bits_per_second / 1000000",
            "legendFormat": "Upload"
          },
          {
            "expr": "speedtest_ping_ms",
            "legendFormat": "Ping"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 50},
                {"color": "green", "value": 100}
              ]
            }
          },
          "overrides": [
            {
              "matcher": {
                "id": "byName",
                "options": "Download"
              },
              "properties": [
                {
                  "id": "unit",
                  "value": "Mbits"
                },
                {
                  "id": "displayName",
                  "value": "‚¨áÔ∏è Download"
                }
              ]
            },
            {
              "matcher": {
                "id": "byName",
                "options": "Upload"
              },
              "properties": [
                {
                  "id": "unit",
                  "value": "Mbits"
                },
                {
                  "id": "displayName",
                  "value": "‚¨ÜÔ∏è Upload"
                }
              ]
            },
            {
              "matcher": {
                "id": "byName",
                "options": "Ping"
              },
              "properties": [
                {
                  "id": "unit",
                  "value": "ms"
                },
                {
                  "id": "displayName",
                  "value": "üèì Ping"
                }
              ]
            }
          ]
        },
        "gridPos": {"h": 4, "w": 24, "x": 0, "y": 28},
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "horizontal",
          "textMode": "value_and_name",
          "colorMode": "background"
        }
      }
    ]
  }
}