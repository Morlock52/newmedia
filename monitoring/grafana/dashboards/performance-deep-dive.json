{
  "dashboard": {
    "id": null,
    "title": "üöÄ Performance Deep Dive - Advanced Monitoring",
    "tags": ["performance", "containers", "deep-dive"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "15s",
    "schemaVersion": 39,
    "version": 1,
    "time": {
      "from": "now-30m",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "15s", "30s", "1m", "5m", "15m", "30m", "1h"]
    },
    "templating": {
      "list": [
        {
          "name": "container",
          "type": "query",
          "datasource": "prometheus",
          "query": "label_values(container_cpu_usage_percent, container)",
          "refresh": 1,
          "includeAll": true,
          "multi": true,
          "current": {
            "selected": false,
            "text": "All",
            "value": "$__all"
          }
        },
        {
          "name": "service",
          "type": "query",
          "datasource": "prometheus",
          "query": "label_values(container_cpu_usage_percent, service)",
          "refresh": 1,
          "includeAll": true,
          "multi": true,
          "current": {
            "selected": false,
            "text": "All",
            "value": "$__all"
          }
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "title": "üî• CPU Performance Overview",
        "type": "timeseries",
        "targets": [
          {
            "expr": "container_cpu_usage_percent{container=~\"$container\", service=~\"$service\"}",
            "legendFormat": "{{container}} ({{service}})"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "lineWidth": 2,
              "fillOpacity": 15,
              "gradientMode": "opacity",
              "stacking": {
                "mode": "none",
                "group": "A"
              }
            },
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 70},
                {"color": "red", "value": 90}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "options": {
          "tooltip": {
            "mode": "multi",
            "sort": "desc"
          },
          "legend": {
            "displayMode": "table",
            "placement": "bottom",
            "calcs": ["last", "max", "mean"]
          }
        }
      },
      {
        "id": 2,
        "title": "üíæ Memory Usage Details",
        "type": "timeseries",
        "targets": [
          {
            "expr": "container_memory_usage_bytes{container=~\"$container\", service=~\"$service\"} / 1024 / 1024",
            "legendFormat": "{{container}} Used"
          },
          {
            "expr": "container_memory_limit_bytes{container=~\"$container\", service=~\"$service\"} / 1024 / 1024",
            "legendFormat": "{{container}} Limit"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "lineWidth": 2,
              "fillOpacity": 10,
              "stacking": {
                "mode": "none",
                "group": "A"
              }
            },
            "unit": "megabytes"
          },
          "overrides": [
            {
              "matcher": {
                "id": "byRegexp",
                "options": ".*Limit.*"
              },
              "properties": [
                {
                  "id": "custom.drawStyle",
                  "value": "points"
                },
                {
                  "id": "custom.pointSize",
                  "value": 3
                },
                {
                  "id": "color",
                  "value": {
                    "mode": "fixed",
                    "fixedColor": "red"
                  }
                }
              ]
            }
          ]
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "options": {
          "tooltip": {
            "mode": "multi",
            "sort": "desc"
          },
          "legend": {
            "displayMode": "table",
            "placement": "bottom",
            "calcs": ["last", "max"]
          }
        }
      },
      {
        "id": 3,
        "title": "üåê Network I/O Performance",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(container_network_io_bytes{container=~\"$container\", service=~\"$service\", direction=\"rx\"}[5m])",
            "legendFormat": "{{container}} RX"
          },
          {
            "expr": "rate(container_network_io_bytes{container=~\"$container\", service=~\"$service\", direction=\"tx\"}[5m])",
            "legendFormat": "{{container}} TX"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "lineWidth": 2,
              "fillOpacity": 20,
              "stacking": {
                "mode": "none",
                "group": "A"
              }
            },
            "unit": "binBps"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "options": {
          "tooltip": {
            "mode": "multi",
            "sort": "desc"
          },
          "legend": {
            "displayMode": "table",
            "placement": "bottom",
            "calcs": ["last", "max", "mean"]
          }
        }
      },
      {
        "id": 4,
        "title": "üíø Disk I/O Performance",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(container_disk_io_bytes{container=~\"$container\", service=~\"$service\", direction=\"read\"}[5m])",
            "legendFormat": "{{container}} Read"
          },
          {
            "expr": "rate(container_disk_io_bytes{container=~\"$container\", service=~\"$service\", direction=\"write\"}[5m])",
            "legendFormat": "{{container}} Write"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "lineWidth": 2,
              "fillOpacity": 20,
              "stacking": {
                "mode": "none",
                "group": "A"
              }
            },
            "unit": "binBps"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "options": {
          "tooltip": {
            "mode": "multi",
            "sort": "desc"
          },
          "legend": {
            "displayMode": "table",
            "placement": "bottom",
            "calcs": ["last", "max", "mean"]
          }
        }
      },
      {
        "id": 5,
        "title": "üñ•Ô∏è Host System Performance",
        "type": "timeseries",
        "targets": [
          {
            "expr": "cpu_usage_detailed{type=\"usage_percent\"}",
            "legendFormat": "{{core}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-spectrum"
            },
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "lineWidth": 1,
              "fillOpacity": 5,
              "stacking": {
                "mode": "none",
                "group": "A"
              }
            },
            "unit": "percent",
            "min": 0,
            "max": 100
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "options": {
          "tooltip": {
            "mode": "multi",
            "sort": "desc"
          },
          "legend": {
            "displayMode": "list",
            "placement": "bottom",
            "calcs": ["last"]
          }
        }
      },
      {
        "id": 6,
        "title": "üå°Ô∏è Thermal Status",
        "type": "gauge",
        "targets": [
          {
            "expr": "thermal_status",
            "legendFormat": "{{sensor}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 60},
                {"color": "orange", "value": 75},
                {"color": "red", "value": 85}
              ]
            },
            "unit": "celsius",
            "min": 0,
            "max": 100
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "auto",
          "showThresholdLabels": false,
          "showThresholdMarkers": true
        }
      },
      {
        "id": 7,
        "title": "üìä Memory Distribution",
        "type": "piechart",
        "targets": [
          {
            "expr": "memory_detailed{type=~\"used|cached|buffers|free\"}",
            "legendFormat": "{{type}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "bytes"
          }
        },
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 24},
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "pieType": "donut",
          "tooltip": {
            "mode": "single",
            "sort": "none"
          },
          "legend": {
            "displayMode": "list",
            "placement": "bottom",
            "values": ["value", "percent"]
          },
          "displayLabels": ["name", "percent"]
        }
      },
      {
        "id": 8,
        "title": "üîç GPU Usage",
        "type": "stat",
        "targets": [
          {
            "expr": "gpu_usage_percent",
            "legendFormat": "GPU {{gpu_id}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 70},
                {"color": "red", "value": 90}
              ]
            },
            "unit": "percent",
            "min": 0,
            "max": 100
          }
        },
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 24},
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "auto",
          "textMode": "value_and_name",
          "colorMode": "background"
        }
      },
      {
        "id": 9,
        "title": "‚ö° Top Resource Consumers",
        "type": "table",
        "targets": [
          {
            "expr": "topk(10, container_cpu_usage_percent)",
            "instant": true,
            "legendFormat": "{{container}}"
          },
          {
            "expr": "topk(10, container_memory_usage_bytes / 1024 / 1024)",
            "instant": true,
            "legendFormat": "{{container}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 50},
                {"color": "red", "value": 80}
              ]
            }
          },
          "overrides": [
            {
              "matcher": {
                "id": "byName",
                "options": "Value #A"
              },
              "properties": [
                {
                  "id": "displayName",
                  "value": "CPU %"
                },
                {
                  "id": "unit",
                  "value": "percent"
                }
              ]
            },
            {
              "matcher": {
                "id": "byName",
                "options": "Value #B"
              },
              "properties": [
                {
                  "id": "displayName",
                  "value": "Memory (MB)"
                },
                {
                  "id": "unit",
                  "value": "megabytes"
                }
              ]
            }
          ]
        },
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 24},
        "options": {
          "showHeader": true,
          "sortBy": [
            {
              "desc": true,
              "displayName": "CPU %"
            }
          ]
        },
        "transformations": [
          {
            "id": "merge",
            "options": {}
          }
        ]
      },
      {
        "id": 10,
        "title": "üì° Network Interface Details",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(network_io_detailed{type=\"bytes_sent\"}[5m])",
            "legendFormat": "{{interface}} TX"
          },
          {
            "expr": "rate(network_io_detailed{type=\"bytes_recv\"}[5m])",
            "legendFormat": "{{interface}} RX"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "lineWidth": 2,
              "fillOpacity": 10,
              "stacking": {
                "mode": "none",
                "group": "A"
              }
            },
            "unit": "binBps"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 32},
        "options": {
          "tooltip": {
            "mode": "multi",
            "sort": "desc"
          },
          "legend": {
            "displayMode": "table",
            "placement": "bottom",
            "calcs": ["last", "max"]
          }
        }
      },
      {
        "id": 11,
        "title": "üíø Disk I/O by Device",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(disk_io_detailed{type=\"read_bytes\"}[5m])",
            "legendFormat": "{{device}} Read"
          },
          {
            "expr": "rate(disk_io_detailed{type=\"write_bytes\"}[5m])",
            "legendFormat": "{{device}} Write"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "lineWidth": 2,
              "fillOpacity": 10,
              "stacking": {
                "mode": "none",
                "group": "A"
              }
            },
            "unit": "binBps"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 32},
        "options": {
          "tooltip": {
            "mode": "multi",
            "sort": "desc"
          },
          "legend": {
            "displayMode": "table",
            "placement": "bottom",
            "calcs": ["last", "max"]
          }
        }
      }
    ]
  }
}