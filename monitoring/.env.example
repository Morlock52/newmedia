# Monitoring Stack Environment Variables

# User/Group IDs
PUID=1000
PGID=1000

# Grafana Settings
GRAFANA_USER=admin
GRAFANA_PASSWORD=changeme_secure_password

# Alert Notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/DISCORD/WEBHOOK
ALERT_EMAIL=alerts@yourdomain.com

# SMTP Settings (for email alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# PagerDuty (optional)
PAGERDUTY_SERVICE_KEY=your_pagerduty_service_key

# API Keys (for Arr suite monitoring)
SONARR_API_KEY=your_sonarr_api_key
RADARR_API_KEY=your_radarr_api_key
LIDARR_API_KEY=your_lidarr_api_key
PROWLARR_API_KEY=your_prowlarr_api_key
BAZARR_API_KEY=your_bazarr_api_key

# Jellyfin API
JELLYFIN_API_KEY=your_jellyfin_api_key
JELLYFIN_URL=http://jellyfin:8096

# qBittorrent Credentials
QBITTORRENT_USERNAME=admin
QBITTORRENT_PASSWORD=adminadmin

# Timezone
TZ=America/New_York

# Retention Settings
PROMETHEUS_RETENTION=30d
LOKI_RETENTION=720h
GRAFANA_RETENTION=90d

# Security Settings
ENABLE_AUTH=true
SECRET_KEY=your_secret_key_here

# Performance Settings
MAX_CONCURRENT_SCRAPES=10
SCRAPE_TIMEOUT=30s
EVALUATION_INTERVAL=15s

# Storage Paths
MEDIA_PATH=/path/to/your/media
DOWNLOADS_PATH=/path/to/your/downloads
CONFIG_PATH=/path/to/your/configs

# External URLs (for external access)
EXTERNAL_GRAFANA_URL=https://grafana.yourdomain.com
EXTERNAL_PROMETHEUS_URL=https://prometheus.yourdomain.com
EXTERNAL_ALERTMANAGER_URL=https://alerts.yourdomain.com

# Database URLs (if using external databases)
POSTGRES_URL=postgresql://user:pass@host:5432/monitoring
INFLUXDB_URL=http://influxdb:8086
INFLUXDB_DATABASE=metrics
INFLUXDB_USERNAME=admin
INFLUXDB_PASSWORD=password

# Advanced Features
ENABLE_GPU_MONITORING=false
ENABLE_NETWORK_MONITORING=true
ENABLE_SECURITY_MONITORING=true
ENABLE_ML_PREDICTIONS=false

# Custom Exporter Settings
CUSTOM_EXPORTER_ENABLED=false
CUSTOM_EXPORTER_PORT=9200
CUSTOM_EXPORTER_PATH=/metrics