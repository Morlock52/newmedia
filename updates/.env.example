# Update System Configuration Example
# Copy this to .env and fill in your values

# GitHub Configuration (Required for Renovate)
GITHUB_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxxx
GITHUB_REPOSITORY=username/repo-name

# Email Notifications (Diun)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SMTP_FROM=your-email@gmail.com
SMTP_TO=alerts@yourdomain.com

# Webhook Notifications (Optional)
# Discord webhook
WEBHOOK_URL=https://discord.com/api/webhooks/xxxx/yyyy

# Gotify Notifications (Optional)
GOTIFY_URL=https://gotify.yourdomain.com
GOTIFY_TOKEN=xxxxxxxxxxxxx

# Matrix Notifications (Optional)
MATRIX_HOMESERVER=https://matrix.org
MATRIX_USER=@bot:matrix.org
MATRIX_PASSWORD=bot-password
MATRIX_ROOM=!roomid:matrix.org

# Ntfy Notifications (Optional)
NTFY_URL=https://ntfy.sh
NTFY_TOPIC=your-docker-updates

# Healthchecks.io Integration (Optional)
HEALTHCHECKS_URL=https://hc-ping.com/your-uuid-here

# Backup Notifications (Optional)
BACKUP_NOTIFICATION_URL=https://discord.com/api/webhooks/xxxx/yyyy

# Domain Configuration
DOMAIN=yourdomain.com

# Timezone
TZ=America/New_York

# Update Strategy Configuration
BACKUP_DIR=./backups
MAX_BACKUPS=10
HEALTH_CHECK_TIMEOUT=300
ROLLBACK_ON_FAILURE=true