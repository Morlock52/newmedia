# Homarr Environment Configuration
# Next.js Environment Variables

# Server-side variables (not prefixed with NEXT_PUBLIC_)
NODE_ENV=production
DATABASE_URL=file:/data/db.sqlite
AUTH_TRUST_HOST=true
NEXTAUTH_URL=http://localhost:7575
NEXTAUTH_SECRET=your-secret-key-here-change-in-production
NEXT_TELEMETRY_DISABLED=1

# Client-side variables (must be prefixed with NEXT_PUBLIC_)
NEXT_PUBLIC_DEFAULT_COLOR_SCHEME=dark
NEXT_PUBLIC_DISABLE_ANALYTICS=true
NEXT_PUBLIC_DEFAULT_BOARD_NAME=default

# Homarr specific configurations
BASE_URL=http://localhost:7575
EDIT_MODE_PASSWORD=
DEFAULT_BOARD=default
PORT=7575

# Feature flags
DISABLE_ANALYTICS=true
DEFAULT_COLOR_SCHEME=dark

# Data paths
DATA_DIR=/data
CONFIG_DIR=/app/data/configs
ICONS_DIR=/app/public/icons

# Logging
LOG_LEVEL=info