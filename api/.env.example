# Media Server API Environment Configuration
# Copy this file to .env and configure your values

# ===========================================
# API CONFIGURATION
# ===========================================

# Port for the API server
API_PORT=3002

# API key for authentication (generate a secure random string)
# API_KEY=your-secret-api-key-here

# Node.js environment
NODE_ENV=production

# Logging level (error, warn, info, debug, trace)
LOG_LEVEL=info

# CORS origin (comma-separated list or * for all)
CORS_ORIGIN=*

# ===========================================
# DOCKER CONFIGURATION
# ===========================================

# Path to your Docker Compose project (absolute path recommended)
DOCKER_PROJECT_PATH=/Users/morlock/fun/newmedia

# Docker Compose file name (if different from docker-compose.yml)
DOCKER_COMPOSE_FILE=docker-compose.yml

# ===========================================
# SEEDBOX CONFIGURATION
# ===========================================

# Enable cross-seed functionality
CROSS_SEED_ENABLED=true

# Cross-seed delay between operations (seconds)
CROSS_SEED_DELAY=30

# Cross-seed search timeout (seconds)
CROSS_SEED_TIMEOUT=60

# qBittorrent WebUI credentials
QBITTORRENT_USERNAME=admin
QBITTORRENT_PASSWORD=adminadmin

# ===========================================
# SERVICE ENDPOINTS (Optional Overrides)
# ===========================================

# Override default service ports if your setup differs
# JELLYFIN_PORT=8096
# SONARR_PORT=8989
# RADARR_PORT=7878
# PROWLARR_PORT=9696
# BAZARR_PORT=6767
# QBITTORRENT_PORT=8080
# SABNZBD_PORT=8081

# ===========================================
# MONITORING CONFIGURATION
# ===========================================

# Health check intervals (milliseconds)
HEALTH_CHECK_INTERVAL=30000

# System metrics collection interval (milliseconds)
METRICS_INTERVAL=60000

# Maximum number of metrics to keep in memory
MAX_METRICS_HISTORY=1000

# ===========================================
# LOGGING CONFIGURATION
# ===========================================

# Log file rotation settings
LOG_MAX_SIZE=10485760
LOG_MAX_FILES=5

# Enable/disable specific log outputs
LOG_TO_FILE=true
LOG_TO_CONSOLE=true

# ===========================================
# SECURITY CONFIGURATION
# ===========================================

# Request rate limiting (requests per window)
RATE_LIMIT_MAX=100

# Rate limit window (milliseconds)
RATE_LIMIT_WINDOW=900000

# Maximum request body size (bytes)
MAX_REQUEST_SIZE=10485760

# ===========================================
# ADVANCED CONFIGURATION
# ===========================================

# Cache timeout for service status (milliseconds)
SERVICE_CACHE_TIMEOUT=30000

# WebSocket ping interval (milliseconds)
WS_PING_INTERVAL=25000

# Enable debug features (development only)
# DEBUG_MODE=false

# Custom service health check timeout (milliseconds)
HEALTH_CHECK_TIMEOUT=5000