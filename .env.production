# Media Server Stack 2025 - Production Environment Configuration
# ===========================================================
# Copy this file to .env and update with your actual values
# SECURITY: Never commit the actual .env file to version control

# ============================================
# SYSTEM CONFIGURATION
# ============================================

# Timezone (https://en.wikipedia.org/wiki/List_of_tz_database_time_zones)
TZ=America/New_York

# User/Group IDs for file permissions
PUID=1000
PGID=1000

# ============================================
# DOMAIN & SSL CONFIGURATION
# ============================================

# Your domain name (required for SSL)
DOMAIN_NAME=localhost

# Cloudflare API credentials for SSL certificates
CLOUDFLARE_EMAIL=demo@localhost.local
CLOUDFLARE_API_KEY=demo-key-for-local-testing

# ============================================
# DATABASE CONFIGURATION
# ============================================

# PostgreSQL settings
DB_USER=mediauser
DB_PASSWORD=change-this-secure-password
DB_NAME=mediadb

# Redis settings
REDIS_PASSWORD=change-this-redis-password

# ============================================
# VPN CONFIGURATION (Optional)
# ============================================

# VPN Provider (nordvpn, expressvpn, pia, surfshark, mullvad, custom)
VPN_PROVIDER=nordvpn

# VPN Credentials
VPN_USERNAME=your-vpn-username
VPN_PASSWORD=your-vpn-password

# VPN Server location
VPN_COUNTRY=Switzerland

# ============================================
# STORAGE PATHS
# ============================================

# Base paths - adjust to your storage layout
MEDIA_PATH=/Users/morlock/fun/newmedia/data/media
DOWNLOADS_PATH=/Users/morlock/fun/newmedia/data/downloads
BACKUP_PATH=/Users/morlock/fun/newmedia/data/backups

# ============================================
# AUTHENTICATION & SECURITY
# ============================================

# Grafana admin credentials
GRAFANA_USER=admin
GRAFANA_PASSWORD=change-this-grafana-password

# ============================================
# API KEYS (Generated by services)
# ============================================

# These will be auto-populated by the setup script
SONARR_API_KEY=
RADARR_API_KEY=
PROWLARR_API_KEY=
LIDARR_API_KEY=
READARR_API_KEY=
BAZARR_API_KEY=
OVERSEERR_API_KEY=
JELLYFIN_API_KEY=

# ============================================
# NOTIFICATION SERVICES (Optional)
# ============================================

# Discord
DISCORD_WEBHOOK_URL=

# Telegram
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Email (SMTP)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=

# Pushover
PUSHOVER_USER_KEY=
PUSHOVER_APP_TOKEN=

# ============================================
# PERFORMANCE TUNING
# ============================================

# Hardware acceleration for Jellyfin
# Options: none, vaapi (Intel), nvenc (NVIDIA), amf (AMD)
JELLYFIN_HARDWARE_ACCEL=vaapi

# Concurrent transcode limit
JELLYFIN_TRANSCODE_LIMIT=4

# ============================================
# MONITORING & LOGGING
# ============================================

# Log levels: DEBUG, INFO, WARN, ERROR
LOG_LEVEL=INFO

# Enable detailed monitoring
ENABLE_MONITORING=true

# Metrics retention (days)
METRICS_RETENTION_DAYS=30

# ============================================
# BACKUP CONFIGURATION
# ============================================

# Backup schedule (cron format)
BACKUP_SCHEDULE="0 2 * * *"

# Backup retention (days)
BACKUP_RETENTION_DAYS=30

# Backup encryption password
BACKUP_ENCRYPTION_PASSWORD=change-this-backup-password

# ============================================
# FEATURE FLAGS
# ============================================

# Enable experimental features
ENABLE_EXPERIMENTAL=false

# Enable auto-updates (use with caution)
ENABLE_AUTO_UPDATES=false

# Enable hardware transcoding
ENABLE_HW_TRANSCODING=true

# Enable VPN for downloads
ENABLE_VPN=true

# ============================================
# RESOURCE LIMITS
# ============================================

# Memory limits (in MB)
JELLYFIN_MEMORY_LIMIT=4096
SONARR_MEMORY_LIMIT=1024
RADARR_MEMORY_LIMIT=1024
PROWLARR_MEMORY_LIMIT=512
OVERSEERR_MEMORY_LIMIT=1024

# CPU limits (number of cores)
JELLYFIN_CPU_LIMIT=4
TRANSCODING_CPU_LIMIT=2

# ============================================
# NETWORK CONFIGURATION
# ============================================

# Custom DNS servers (comma-separated)
DNS_SERVERS=1.1.1.1,1.0.0.1

# Enable IPv6
ENABLE_IPV6=false

# ============================================
# SECURITY SETTINGS
# ============================================

# Enable fail2ban
ENABLE_FAIL2BAN=true

# Max login attempts before ban
MAX_LOGIN_ATTEMPTS=5

# Ban duration (seconds)
BAN_DURATION=3600

# Enable 2FA for admin accounts
ENABLE_2FA=true

# Session timeout (minutes)
SESSION_TIMEOUT=30

# ============================================
# DEVELOPMENT/DEBUG
# ============================================

# Enable debug mode (verbose logging)
DEBUG_MODE=false

# Enable SQL query logging
DEBUG_SQL=false

# Enable API request logging
DEBUG_API=false