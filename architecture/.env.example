# Enhanced Media Server Environment Configuration
# Copy this file to .env and update with your values

# =============================================================================
# GENERAL SETTINGS
# =============================================================================
DOMAIN=media.example.com
TZ=America/New_York
PUID=1000
PGID=1000

# =============================================================================
# AUTHENTICATION
# =============================================================================
# Authelia Secrets (generate with: openssl rand -hex 32)
AUTHELIA_JWT_SECRET=your_jwt_secret_here
AUTHELIA_SESSION_SECRET=your_session_secret_here
AUTHELIA_STORAGE_ENCRYPTION_KEY=your_storage_encryption_key_here

# LDAP Configuration (optional)
LDAP_URL=ldap://ldap.example.com
LDAP_BASE_DN=dc=example,dc=com
LDAP_USERNAME=cn=admin,dc=example,dc=com
LDAP_PASSWORD=your_ldap_password

# =============================================================================
# DATABASE PASSWORDS
# =============================================================================
POSTGRES_PASSWORD=your_postgres_password_here
REDIS_PASSWORD=your_redis_password_here
IMMICH_DB_PASSWORD=your_immich_db_password_here

# =============================================================================
# SERVICE CONFIGURATION
# =============================================================================
# Grafana
GRAFANA_PASSWORD=your_grafana_password_here

# Meilisearch
MEILI_MASTER_KEY=your_meili_master_key_here

# Jellyfin
JELLYFIN_API_KEY=your_jellyfin_api_key_here

# Immich
IMMICH_MACHINE_LEARNING_ENABLED=true
IMMICH_UPLOAD_LOCATION=/usr/src/app/upload

# =============================================================================
# EMAIL NOTIFICATIONS
# =============================================================================
EMAIL_FROM=notifications@example.com
EMAIL_TO=admin@example.com
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_ENCRYPTION_PASSWORD=your_backup_encryption_password
BACKUP_CLOUD_PROVIDER=s3
BACKUP_CLOUD_BUCKET=media-server-backups
BACKUP_CLOUD_ACCESS_KEY=your_access_key
BACKUP_CLOUD_SECRET_KEY=your_secret_key

# =============================================================================
# VPN CONFIGURATION
# =============================================================================
WIREGUARD_PEERS=laptop,phone,tablet
WIREGUARD_ALLOWED_IPS=0.0.0.0/0
WIREGUARD_DNS=1.1.1.1,8.8.8.8

# =============================================================================
# MONITORING
# =============================================================================
PROMETHEUS_RETENTION_TIME=90d
LOKI_RETENTION_DAYS=30
GRAFANA_PLUGINS=grafana-piechart-panel,grafana-worldmap-panel

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================
# Hardware Acceleration
NVIDIA_VISIBLE_DEVICES=all
NVIDIA_DRIVER_CAPABILITIES=compute,utility,video

# Cache Settings
REDIS_MAXMEMORY=4gb
REDIS_MAXMEMORY_POLICY=allkeys-lru

# Elasticsearch
ELASTIC_HEAP_SIZE=2g
ELASTIC_MAX_HEAP_SIZE=2g

# =============================================================================
# SECURITY
# =============================================================================
# Crowdsec
CROWDSEC_AGENT_USERNAME=your_agent_username
CROWDSEC_AGENT_PASSWORD=your_agent_password
CROWDSEC_CENTRAL_API_KEY=your_central_api_key

# Fail2ban
FAIL2BAN_MAXRETRY=5
FAIL2BAN_BANTIME=3600
FAIL2BAN_FINDTIME=600

# =============================================================================
# API KEYS
# =============================================================================
# Media Management
SONARR_API_KEY=your_sonarr_api_key
RADARR_API_KEY=your_radarr_api_key
LIDARR_API_KEY=your_lidarr_api_key
READARR_API_KEY=your_readarr_api_key
PROWLARR_API_KEY=your_prowlarr_api_key

# Service APIs
TMDB_API_KEY=your_tmdb_api_key
MUSICBRAINZ_API_KEY=your_musicbrainz_api_key
GOODREADS_API_KEY=your_goodreads_api_key
COMICVINE_API_KEY=your_comicvine_api_key

# =============================================================================
# STORAGE PATHS
# =============================================================================
MEDIA_PATH=/mnt/storage/media
CONFIG_PATH=/opt/mediaserver/config
BACKUP_PATH=/mnt/backup/mediaserver
CACHE_PATH=/var/cache/mediaserver