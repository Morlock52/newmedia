# Quantum Security Server Configuration

# Server Configuration
NODE_ENV=production
PORT=3000
QUANTUM_TLS_PORT=8443
HOST=0.0.0.0

# Quantum Cryptography Settings
HYBRID_MODE=x25519-mlkem768
SIGNATURE_ALGORITHM=ml-dsa-65
KEY_ROTATION_INTERVAL=86400000

# Security Settings
ALLOWED_ORIGINS=http://localhost:3000,https://localhost:8443
TOKEN_EXPIRY=24h
REFRESH_TOKEN_EXPIRY=7d
MAX_AUTH_ATTEMPTS=5
MAX_TOKENS_PER_MINUTE=100

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=quantumsecurepass123

# Monitoring
METRICS_PORT=9091
LOG_LEVEL=info

# Performance Tuning
MAX_QUANTUM_OPS_PER_SECOND=1000
WORKER_THREADS=4
CACHE_TTL=3600

# Feature Flags
ENABLE_HYBRID_MODE=true
ENABLE_MFA=true
ENABLE_SECURITY_MONITORING=true
ENABLE_AUTO_REMEDIATION=true