# Production Environment Configuration
# Integrated Media Server Platform - All Components

# =================
# CORE CONFIGURATION
# =================
NODE_ENV=production
COMPOSE_PROJECT_NAME=media-server-production
COMPOSE_FILE=docker-compose.master.yml

# =================
# DOMAIN CONFIGURATION
# =================
DOMAIN=yourdomain.com
SUBDOMAIN_AI=ai
SUBDOMAIN_VR=vr
SUBDOMAIN_VOICE=voice
SUBDOMAIN_WEB3=web3
SUBDOMAIN_QUANTUM=quantum
SUBDOMAIN_DASHBOARD=dashboard
SUBDOMAIN_MEDIA=media
SUBDOMAIN_GRAFANA=grafana
SUBDOMAIN_PROMETHEUS=prometheus
SUBDOMAIN_TRAEFIK=traefik

# =================
# SSL/TLS CONFIGURATION
# =================
ACME_EMAIL=admin@yourdomain.com
CF_API_EMAIL=your-cloudflare-email@domain.com
CF_DNS_API_TOKEN=your-cloudflare-dns-api-token

# =================
# DATABASE CONFIGURATION
# =================
POSTGRES_USER=mediaserver_user
POSTGRES_PASSWORD=your-secure-postgres-password-here
POSTGRES_DB=mediaserver
POSTGRES_HOST=postgres-master
POSTGRES_PORT=5432

# Redis Configuration
REDIS_PASSWORD=your-secure-redis-password-here
REDIS_HOST=redis-master
REDIS_PORT=6379

# =================
# AUTHENTICATION & SECURITY
# =================
# Traefik Dashboard Auth (generate with: htpasswd -nb admin password)
TRAEFIK_AUTH=admin:$2y$10$example-hash-here

# Grafana Admin
GRAFANA_ADMIN_PASSWORD=your-secure-grafana-password

# JWT Secrets
JWT_SECRET=your-super-secure-jwt-secret-256-bits-long
SESSION_SECRET=your-super-secure-session-secret-256-bits

# API Keys
API_KEY_JELLYFIN=your-jellyfin-api-key
API_KEY_RADARR=your-radarr-api-key
API_KEY_SONARR=your-sonarr-api-key
API_KEY_PROWLARR=your-prowlarr-api-key

# =================
# AI/ML CONFIGURATION
# =================
# CUDA/GPU Settings
CUDA_VISIBLE_DEVICES=0
PYTORCH_CUDA_ALLOC_CONF=max_split_size_mb:512
NVIDIA_VISIBLE_DEVICES=all
NVIDIA_DRIVER_CAPABILITIES=compute,utility

# AI Model Settings
AI_MODEL_PATH=/models
AI_CACHE_SIZE=10GB
AI_WORKER_THREADS=4

# TensorFlow/PyTorch Settings
TF_CPP_MIN_LOG_LEVEL=2
TORCH_HOME=/models/torch

# =================
# AR/VR CONFIGURATION
# =================
WEBXR_ENABLED=true
SPATIAL_AUDIO=true
VR_RESOLUTION=4K
AR_TRACKING_MODE=world
HAPTIC_FEEDBACK=true

# Eye Tracking
EYE_TRACKING_ENABLED=true
GAZE_CALIBRATION=auto

# Hand Tracking
HAND_TRACKING_ENABLED=true
GESTURE_RECOGNITION=advanced

# =================
# VOICE AI CONFIGURATION
# =================
# Speech Recognition
SPEECH_API_PROVIDER=azure
SPEECH_API_KEY=your-speech-api-key
SPEECH_REGION=your-region

# Text-to-Speech
TTS_PROVIDER=azure
TTS_VOICE=en-US-AriaNeural
TTS_RATE=1.0
TTS_PITCH=0

# Voice Commands
VOICE_COMMANDS_ENABLED=true
WAKE_WORD=hey-media
LANGUAGE_MODEL=multilingual

# =================
# BLOCKCHAIN/WEB3 CONFIGURATION
# =================
# Ethereum Configuration
ETHEREUM_NETWORK=mainnet
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your-project-id
ETHEREUM_WSS_URL=wss://mainnet.infura.io/ws/v3/your-project-id
BLOCKCHAIN_PRIVATE_KEY=your-private-key-here

# IPFS Configuration
IPFS_GATEWAY=https://ipfs.io/ipfs/
IPFS_API_URL=http://localhost:5001
IPFS_CLUSTER_ENABLED=true

# NFT Marketplace
NFT_CONTRACT_ADDRESS=0x...
MARKETPLACE_FEE=2.5
ROYALTY_PERCENTAGE=10

# Cross-chain Support
POLYGON_RPC_URL=https://polygon-rpc.com
BSC_RPC_URL=https://bsc-dataseed.binance.org
ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc

# =================
# QUANTUM SECURITY CONFIGURATION
# =================
QUANTUM_MODE=production
QUANTUM_KEY_DISTRIBUTION=enabled
POST_QUANTUM_CRYPTO=enabled
LATTICE_ENCRYPTION=true
QUANTUM_RANDOM_SEED=true

# Key Management
QUANTUM_KEY_ROTATION=24h
QUANTUM_KEY_LENGTH=2048
QUANTUM_SIGNATURE_ALGORITHM=dilithium3

# Secure Communication
QUANTUM_TLS_ENABLED=true
QUANTUM_VPN_ENABLED=true
QUANTUM_TUNNELING=active

# =================
# MEDIA STACK CONFIGURATION
# =================
# Jellyfin
JELLYFIN_PUBLISHED_SERVER_URL=https://media.yourdomain.com
JELLYFIN_DATA_DIR=/config/jellyfin
JELLYFIN_CACHE_DIR=/cache/jellyfin
JELLYFIN_LOG_DIR=/logs/jellyfin

# Transcoding
TRANSCODING_THREADS=0
HARDWARE_ACCELERATION=nvenc
TRANSCODING_TEMP_PATH=/transcodes

# Media Paths
MEDIA_ROOT=/media
MOVIES_PATH=/media/movies
TV_SHOWS_PATH=/media/tv
MUSIC_PATH=/media/music
BOOKS_PATH=/media/books
AUDIOBOOKS_PATH=/media/audiobooks

# Download Paths
DOWNLOADS_ROOT=/downloads
COMPLETE_DOWNLOADS=/downloads/complete
INCOMPLETE_DOWNLOADS=/downloads/incomplete

# =================
# MONITORING & LOGGING
# =================
# Prometheus
PROMETHEUS_STORAGE_RETENTION=30d
PROMETHEUS_SCRAPE_INTERVAL=15s
PROMETHEUS_EVALUATION_INTERVAL=15s

# Grafana
GRAFANA_PLUGINS=grafana-clock-panel,grafana-simple-json-datasource,grafana-worldmap-panel
GRAFANA_THEME=dark
GRAFANA_ENABLE_GZIP=true

# Logging Levels
LOG_LEVEL=info
DEBUG_MODE=false
VERBOSE_LOGGING=false

# Log Retention
LOG_RETENTION_DAYS=30
LOG_MAX_SIZE=100MB
LOG_MAX_FILES=10

# =================
# PERFORMANCE OPTIMIZATION
# =================
# Resource Limits
MAX_MEMORY_USAGE=16GB
MAX_CPU_USAGE=80%
DISK_CACHE_SIZE=10GB

# Caching
REDIS_CACHE_TTL=3600
NGINX_CACHE_SIZE=1GB
BROWSER_CACHE_TTL=86400

# Connection Pools
DATABASE_POOL_SIZE=20
REDIS_POOL_SIZE=10
HTTP_TIMEOUT=30s

# =================
# BACKUP CONFIGURATION
# =================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=/backups
BACKUP_ENCRYPTION=true

# Remote Backup
REMOTE_BACKUP_ENABLED=true
S3_BUCKET=your-backup-bucket
S3_REGION=us-east-1
S3_ACCESS_KEY=your-s3-access-key
S3_SECRET_KEY=your-s3-secret-key

# =================
# NETWORKING CONFIGURATION
# =================
# Docker Networks
NETWORK_SUBNET_MEDIA=172.20.0.0/16
NETWORK_SUBNET_SECURE=172.21.0.0/16
NETWORK_SUBNET_PUBLIC=172.22.0.0/16

# Port Configuration
PORT_HTTP=80
PORT_HTTPS=443
PORT_TRAEFIK_DASHBOARD=8080
PORT_JELLYFIN=8096
PORT_AI_ML=3001
PORT_AR_VR=8082
PORT_VOICE_AI=3002
PORT_WEB3=3003
PORT_QUANTUM=8443
PORT_DASHBOARD=8088
PORT_GRAFANA=3000
PORT_PROMETHEUS=9090

# =================
# EXTERNAL SERVICES
# =================
# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=media-server@yourdomain.com

# Notification Services
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your-webhook
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your-webhook
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-chat-id

# =================
# DEVELOPMENT/DEBUG SETTINGS
# =================
# Only for development - remove in production
ENABLE_DEBUG_LOGS=false
ENABLE_PROFILING=false
ENABLE_METRICS_COLLECTION=true
ENABLE_ERROR_REPORTING=true

# Feature Flags
FEATURE_AI_ENHANCEMENT=true
FEATURE_AR_VR_MODE=true
FEATURE_VOICE_CONTROL=true
FEATURE_BLOCKCHAIN_INTEGRATION=true
FEATURE_QUANTUM_SECURITY=true
FEATURE_HOLOGRAPHIC_DASHBOARD=true

# =================
# TIMEZONE & LOCALE
# =================
TZ=UTC
LOCALE=en_US.UTF-8
LANGUAGE=en_US:en

# =================
# HEALTH CHECK SETTINGS
# =================
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3
HEALTH_CHECK_START_PERIOD=60s