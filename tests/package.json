{
  "name": "newmedia-tests",
  "version": "1.0.0",
  "description": "Comprehensive test suite for NewMedia Docker containers",
  "main": "index.js",
  "scripts": {
    "test": "npm run test:integration && npm run test:performance && npm run test:security",
    "test:integration": "jest --config=jest.integration.config.js --runInBand",
    "test:performance": "npm run k6:run",
    "test:security": "npm run security:scan",
    "test:api": "newman run integration/postman/collection.json -r html,json --reporter-html-export reports/api-test-report.html",
    "test:contracts": "portman -l integration/openapi/spec.yml -c integration/postman/portman-config.json",
    "k6:run": "k6 run --out influxdb=http://influxdb:8086/k6 performance/load-test.js",
    "k6:stress": "k6 run --out influxdb=http://influxdb:8086/k6 performance/stress-test.js",
    "k6:spike": "k6 run --out influxdb=http://influxdb:8086/k6 performance/spike-test.js",
    "k6:soak": "k6 run --out influxdb=http://influxdb:8086/k6 performance/soak-test.js",
    "security:scan": "npm run security:trivy && npm run security:nuclei",
    "security:trivy": "trivy image --severity HIGH,CRITICAL --format json --output reports/security/trivy-report.json",
    "security:nuclei": "nuclei -t security/nuclei-templates/ -target http://localhost -json -o reports/security/nuclei-report.json",
    "report:generate": "node scripts/generate-report.js",
    "clean": "rm -rf reports/*"
  },
  "keywords": [
    "testing",
    "docker",
    "integration",
    "performance",
    "security"
  ],
  "author": "NewMedia Team",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "@types/supertest": "^6.0.2",
    "axios": "^1.6.2",
    "chai": "^4.3.10",
    "dockerode": "^4.0.0",
    "dotenv": "^16.3.1",
    "jest": "^29.7.0",
    "jest-html-reporter": "^3.10.2",
    "mocha": "^10.2.0",
    "newman": "^6.0.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3",
    "wait-port": "^1.1.0"
  },
  "dependencies": {
    "k6": "^0.47.0",
    "prom-client": "^15.0.0",
    "winston": "^3.11.0"
  }
}